<% layout("/layout/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Edit your listing</h2>
      <!-- <hr />
      <br /> -->
      <form
        method="POST"
        class="needs-validation"
        novalidate
        action="/listings/<%=listing._id%>?_method=PUT"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            value="<%=listing.title%>"
            name="listing[title]"
            class="form-control"
            type="text"
            required
          />
          <div class="valid-feedback">Title is good</div>
          <div class="invalid-feedback">Please enter the Title</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            placeholder="enter description"
            type="text"
            required
          >
      <%=listing.description%></textarea
          >
          <div class="valid-feedback">This is good Decription</div>
          <div class="invalid-feedback">Please enter the Description</div>
        </div>
        <!-- <div class="mb-3">
          <label for="filename" class="form-label">Filename of Image</label>
          <input
            class="form-control"
            name="listing[image][filename]"
            value="<%=listing.image.filename%>"
            type="text"
          />
        </div> -->
         <div class="mb-3">
          Original Listing Image <br> <br>
           <img src="<%=listing.image.url%>" style="width: 180px; height: auto; border-radius: 10px; box-shadow: 0px 0px 6px rgba(0,0,0,0.3);">
        </div>

        <div class="mb-3">
          <label for="url" class="form-label">Upload New Image</label>
          <input
          name="image"
          type="file"
          class="form-control"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" value="<%=listing.price%>" required />
            <div class="valid-feedback">This is valid Price</div>
            <div class="invalid-feedback">Please enter the Price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              class="form-control"
              name="listing[country]"
              value="<%=listing.country%>"
              type="text"
              required
            />
            <div class="valid-feedback">This is valid Country</div>
            <div class="invalid-feedback">
              Please enter the valid country name
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Location</label>
          <input
            class="form-control"
            name="listing[location]"
            value="<%=listing.location%>"
            type="text"
            required
          />
          <div class="valid-feedback">Location is valid</div>
          <div class="invalid-feedback">Please enter the Location</div>
        </div>
        <!-- <hr />
        <br /> -->
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
      </form>
    </div>
  </div>
</body>
